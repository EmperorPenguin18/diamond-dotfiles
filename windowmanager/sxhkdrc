super + h  #Switch to previous workspace
  /home/USER/.config/scripts/ws left

super + l #Switch to next workspace
  /home/USER/.config/scripts/ws right

Alt + h  #Follow focused window to previous workspace
  /home/USER/.config/scripts/ws send-left

Alt + l #Follow focused window to next workspace
  /home/USER/.config/scripts/ws send-right

super + 1 #Switch to workspace 1
  /home/USER/.config/scripts/ws one

super + 2 #Switch to workspace 2
  /home/USER/.config/scripts/ws two

super + 3 #Switch to workspace 3
  /home/USER/.config/scripts/ws three

super + 4 #Switch to workspace 4
  /home/USER/.config/scripts/ws four

super + 5 #Switch to workspace 5
  /home/USER/.config/scripts/ws five

super + e #Fullscreen focused window
  /home/USER/.config/scripts/ws fullscreen

super + q #Close the focused window
  /home/USER/.config/scripts/ws close

super + Return  #Open the terminal
  alacritty

super + b #Open the browser
  firefox

super + f #Open the file manager
  pcmanfm

super + p #View the password helper
  passmenu

super + y #Open youtube viewer
  freetube

super + d #Open messenging software
  lightcord

super + Up  #View the top rofi
  /home/USER/.config/scripts/rofi-top

super + Right #View the right rofi
  /home/USER/.config/scripts/rofi-right

super + Down  #View the bottom rofi
  /home/USER/.config/scripts/rofi-bottom

super + Left  #View the left rofi
  /home/USER/.config/scripts/rofi-left

super + space #View the center rofi
  /home/USER/.config/scripts/rofi-center

super + s #View the shortcut helper
  /home/USER/.config/scripts/rofi-shortcuts

super + w #View the wifi helper
  /home/USER/.config/scripts/rofi-wifi

XF86Tools #View the music helper
  /home/USER/.config/scripts/rofi-music

XF86AudioMute #Mute audio
  /home/USER/.config/scripts/audiocontrol mute

XF86AudioRaiseVolume  #Raise volume
  /home/USER/.config/scripts/audiocontrol up

XF86AudioLowerVolume  #Lower volume
  /home/USER/.config/scripts/audiocontrol down

Print #Take screenshot
  /home/USER/.config/scripts/screenshot

XF86AudioPlay #Play/Pause music
  /home/USER/.config/scripts/audiocontrol play

XF86AudioStop #Stop music
  /home/USER/.config/scripts/audiocontrol stop

XF86AudioNext #Next track
  /home/USER/.config/scripts/audiocontrol next

XF86AudioPrev #Previous track
  /home/USER/.config/scripts/audiocontrol prev

super + n #View memory information
  /home/USER/.config/scripts/monitor mem

super + c #View cpu information
  /home/USER/.config/scripts/monitor cpu

super + i #View internet information
  /home/USER/.config/scripts/monitor int

super + m #Mute focused window
  /home/USER/.config/scripts/pulsemute
